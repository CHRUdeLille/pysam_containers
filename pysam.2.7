BootStrap: docker
From: phusion/baseimage:0.11

%labels
  MAINTAINER chadi.saad@chru-lille.fr
  Python2.7 / Pysam

%environment
  export  LC_ALL=en_US.UTF-8
  export  LANGUAGE=en_US.UTF-8

%help
  Singularity container for Pysam/Python2.7 <https://pysam.readthedocs.io/en/latest> application.

%post
  apt-get update
  apt-get -y install build-essential \
  zlibc \
  python2.7 \
  python-pip \

         
  pip install pysam

      
